/* Aim - C program to reverse digits of a given integer. */
#include<stdio.h>
#include<math.h>

int main() 
{
  int a,b,c=0,i,d;
  printf("Enter a number :");
  scanf("%d",&a);
  d = a;
  for(i=0;a>0;i++)
  {
      b = a %10;
      c = c*10+b;
      a = a/10;
  }
  printf("reverse of number %d is %d",d,c);

}
